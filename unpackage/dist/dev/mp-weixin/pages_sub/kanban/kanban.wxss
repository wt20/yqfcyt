.statistics-box {
  background-image: linear-gradient(to bottom, #84aaff2e, #9292923b);
  min-height: 100vh;
}
.statistics-box .tab-tag {
  display: flex;
  gap: 16rpx;
  padding-left: 46rpx;
  margin-top: -32rpx;
  flex-wrap: wrap;
}
.statistics-box .box1.grid-col3 {
  display: grid;
  grid-template-columns: 200rpx 200rpx 200rpx;
  gap: 24rpx;
}
.statistics-box .box1 {
  display: grid;
  grid-template-columns: 1fr 1fr;
  justify-content: space-between;
  margin: 0px 36rpx;
  background: #fff;
  margin-top: 36rpx;
  border-radius: 10rpx;
  padding: 40rpx 36rpx;
  flex-wrap: wrap;
  gap: 100rpx 0rpx;
}
.statistics-box .box1 .count-item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 0;
}
.statistics-box .box1 .count-item .label {
  margin-bottom: 40rpx;
  color: #666;
}
.statistics-box .box1 .count-item .count-box {
  display: flex;
  gap: 12rpx;
  align-items: flex-end;
  height: 100rpx;
  line-height: 100rpx;
}
.statistics-box .box1 .count-item .count-box .unit {
  color: #0fbfef;
  font-size: 32rpx;
}
.statistics-box .box1 .count-item .count-box .cycle-box {
  background: #3c9cff;
  border-radius: 50%;
  width: 110rpx;
  height: 110rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-weight: 500;
  font-size: 32rpx;
}
.statistics-box .box3 .unit {
  color: #a24dff !important;
}
.statistics-box .box3 .cycle-box {
  background: #a24dff !important;
}
